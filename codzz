 {% comment %} SCRIPT RESPONS√ÅVEL POR ABRIR O MODAL {% endcomment %}     
      
<script>
  var maisFormasPagamento = document.getElementById("maisFormasPagamento");
  var modal = document.getElementById("modal");
  var modalBackground = modal.querySelector(".modal-background");


      
  maisFormasPagamento.addEventListener("click", function() {
modal.style.display = "block";
document.body.classList.add("dark-background"); // adiciona a classe para escurecer o fundo do body
});

modalBackground.addEventListener("click", function(event) {
if (event.target === modalBackground) {
modal.style.display = "none";
document.body.classList.remove("dark-background"); // remove a classe para clarear o fundo do body
}
});

</script>   
</div> 








