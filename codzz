<script>
function showContent(element, modalContent) {
  // oculta todos os modais
  document.querySelectorAll('.modal-content').forEach(content => {
    content.style.display = 'none';
  });
  // mostra o modal correspondente ao elemento clicado
  modalContent.style.display = 'block';
}

// adiciona evento de clique para cada √≠cone/modal
const modalBoletoIcon = document.querySelector('.modalboletoicon');
const modalContentBoleto = document.querySelector('.modal-content-boleto');
modalBoletoIcon.addEventListener('click', () => {
  showContent(modalBoletoIcon, modalContentBoleto);
});

const modalCardIcon = document.querySelector('.modalcardicon');
const modalContentCard = document.querySelector('.modal-content-card');
modalCardIcon.addEventListener('click', () => {
  showContent(modalCardIcon, modalContentCard);
});

const modalPixIcon = document.querySelector('.modalpixicon');
const modalContentPix = document.querySelector('.modal-content-pix');
modalPixIcon.addEventListener('click', () => {
  showContent(modalPixIcon, modalContentPix);
});
</script>     
</div>      




















      
